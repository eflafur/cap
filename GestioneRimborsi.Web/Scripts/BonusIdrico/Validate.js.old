            label = label + '<td>' + res.LeaderName + '</td>';
            label = label + '<td>' + res.Office + '</td>';
            label = label + '<td>' + res.Role + '</td>';
            label = label + '<td>' + res.LeaderId + '</td>';
            label = label + '</tr>';
            $("#tbf1").hide();
            $("#tbf2").hide();
            $("#tbf3").show();
            $("#tb63").html(label);
        });
}


