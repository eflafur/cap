                    <a href="@UrlFor.HomeFuoriStandard" style="color:#3E7819" onclick="displayWaiter();">
                        <h1>
                            <i class="fa fa-check fa-2x"></i>
                            <i class="fa fa-arrow-right text-after-icon"></i>
                            <i class="fa fa-thumbs-o-up fa-2x text-after-icon"></i>
