    @if (CurrentUser.HasPermissionOrIsPrivileged("gri.rimborsi") || CurrentUser.HasPermissionOrIsPrivileged("gri.disposizioni"))
    {
        <div class="col-sm-4 text-center home-block">
            <div class="text-center home-block">
                <div class="inner-home-block" style="background-color: #3E7819; border: 5px solid #3E7819">
                    <a href="@UrlFor.HomeRimborsi" style="color:#FFF" onclick="displayWaiter();">
                        <h1>
                            <i class="fa fa-list-ul fa-2x"></i>
                            <i class="fa fa-arrow-right text-after-icon"></i>
                            <i class="fa fa-credit-card fa-2x text-after-icon"></i>
