<script>
    $(function () {
        // INIT BOOTSTRAP TOOLTIP
        $('[data-toggle="tooltip"]').tooltip();

        // INIT JQUERY DATEPICKER
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy'
            , weekStart: 1
        });

        $('.gestioneRimborsiHomePage .home-block:odd').addClass('col-sm-6 col-md-4 col-lg-4').addClass('home-block-odd');
        $('.gestioneRimborsiHomePage .home-block:even').addClass('col-sm-6 col-md-4 col-lg-4').addClass('home-block-even');
    });

    function displayWaiter() {
        displayModalWaiter();
    }
</script>
