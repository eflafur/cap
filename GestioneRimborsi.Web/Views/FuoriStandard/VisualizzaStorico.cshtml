                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-12 cointainerTableFuoriStandard bg-w" id="storicoIndennizziTableContainer">
                                    @Html.Partial("~/views/FuoriStandard/_elencoFuoriStandardStorico.cshtml", null)
