@model String
  
<div class="modal fade text-left" id="approvaRettifica" tabindex="-1" role="dialog" aria-labelledby="approvaRettificaModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalNote">
            <div class="modal-header">
                <button type="button" class="close" onclick="dismissModalApprova();" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="approvaRettificaModalTitle">
                    <i class="fa fa-exclamation-triangle text-danger"></i>
                    <span class="text-after-icon">Conferma</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-md-8 col-md-offset-2">
                            <h2 class="text-danger lead">Attenzione</h2>
                            <p class="lead" id="approvaRettificaText">@Model<br /></p>
                        </div>
                        <div class="modal-footer col-md-12">
                            <button type="button" class="btn btn-lg btn-default" onclick="dismissModalApprova();">
                                <i class=" fa fa-lg fa-arrow-circle-o-left">
                                </i><span class="text-after-icon">Annulla</span>
                            </button>
                            <button type="button" id="confAppr" class="btn btn-lg btn-function" onclick="dismissModalApprova();">
                                <span>OK</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $('#approvaRettifica').modal({ backdrop: 'static', keyboard: true, show: false });

    function dismissModalApprova() {
        $('#approvaRettifica').modal('hide');
        setTimeout(function () {
            $("#approvaRettificaText").text("Confermare l'operazione richiesta?");
        }, 500);
    }
</script>
