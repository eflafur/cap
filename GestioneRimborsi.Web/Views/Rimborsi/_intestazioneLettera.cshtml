@model GestioneRimborso

<div class="modal fade text-left" id="intestazioneLettera" tabindex="-1" role="dialog" aria-labelledby="intestazioneLetteraModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="timesSize" aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="intestazioneLetteraModalTitle">
                    <i class="fa fa-lg fa-envelope"></i>
                    <span class="text-after-icon">Intestazione lettera</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        @{
                            var attributes = new Dictionary<String, Object>();
                            attributes.Add("role", "form");
                            attributes.Add("class", "breath-on-top-8");
                        }

                        @using (Html.BeginForm("IntestazioneLettera", "Rimborsi", FormMethod.Post, attributes))
                        {
                            if (Model != null)
                            {
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="NomeIntestazioneLettera" class="control-label">Nome</label>
                                            @Html.TextBox("NomeIntestazioneLettera", Model.Intestazione, new { @class = "form-control", placeholder = "Nome del destinatario" })
                                            <label for="IndirizzoIntestazioneLettera" class="control-label">Indirizzo</label>
                                            @Html.TextBox("IndirizzoIntestazioneLettera", Model.Strada, new { @class = "form-control", placeholder = "Via/Piazza/Strada" })
                                            <label for="CivicoIntestazioneLettera" class="control-label">Civico</label>
                                            @Html.TextBox("CivicoIntestazioneLettera", Model.Civico, new { @class = "form-control", placeholder = "Civico" })
                                            <label for="CAPIntestazioneLettera" class="control-label">CAP</label>
                                            @Html.TextBox("CAPIntestazioneLettera", Model.CAP, new { @class = "form-control", placeholder = "CAP", maxlength = "5" })
                                            <label for="LocalitaIntestazioneLettera" class="control-label">Località</label>
                                            @Html.TextBox("LocalitaIntestazioneLettera", Model.Localita, new { @class = "form-control", placeholder = "Località" })
                                            <label for="ProvinciaIntestazioneLettera" class="control-label">Provincia</label>
                                            @Html.TextBox("ProvinciaIntestazioneLettera", Model.Provincia, new { @class = "form-control", placeholder = "Provincia", maxlength = "2" })
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-lg btn-default" data-dismiss="modal" onclick="ripristinaIntestazioneLettera();">
                                        <i class="fa fa-lg fa-arrow-circle-o-left"></i><span class="text-after-icon">Annulla</span>
                                    </button>
                                    <button type="button" class="btn btn-lg btn-function" data-dismiss="modal">
                                        <span>Salva</span>
                                    </button>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
